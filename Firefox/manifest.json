{
  "manifest_version": 2,
  "name": "Nikflix",
  "version": "1.7",
  "icons": {
    "48": "icons/Nikflix-48.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/Nikflix-48.png",
    "default_popup": "popup.html",
    "default_title": "Nikflix - Bypass the account-sharing restrictions"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "Main.js"
      ]
    }
  ]
}